<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_new_blue"
    tools:context=".menu.materi.hukum.HukunLatihanActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar_soal_energi"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/img1soalhukum"
        android:layout_below="@id/toolbar_soal_energi"
        android:layout_alignLeft="@id/txt1"
        android:id="@+id/gambar1hukum"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/latihanhukum1"
        android:textColor="@color/black"
        android:layout_marginHorizontal="24dp"
        android:textSize="14sp"
        android:layout_below="@id/gambar1hukum"
        android:id="@+id/txt1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:id="@+id/lytsoal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="12dp"
                android:layout_alignRight="@id/pembatassoal">

                <Button
                    android:id="@+id/btnA"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/latihanhukum1a"/>

                <Button
                    android:id="@+id/btnB"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/latihanhukum1b"/>

            </LinearLayout>

            <View
                android:id="@+id/pembatassoal"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="12dp"/>

            <LinearLayout
                android:layout_alignLeft="@id/pembatassoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <Button
                    android:id="@+id/btnC"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/latihanhukum1c"/>

                <Button
                    android:id="@+id/btnD"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/latihanhukum1d"/>

            </LinearLayout>

        </RelativeLayout>



        <Button
            android:id="@+id/btnE"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/latihanhukum1e"/>

    </LinearLayout>

</RelativeLayout>