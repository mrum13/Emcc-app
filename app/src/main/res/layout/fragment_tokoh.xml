<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.tokoh.TokohFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginVertical="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/img1_tokoh"
                android:src="@drawable/tokoh1"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:text="@string/tokohtext1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@id/img1_tokoh"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"
                android:justificationMode="inter_word"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_height="150dp"
                android:id="@+id/img2_tokoh"
                android:src="@drawable/tokoh2"
                android:layout_below="@id/text1"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:text="@string/tokohtext2"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@id/img2_tokoh"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"
                android:justificationMode="inter_word"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>