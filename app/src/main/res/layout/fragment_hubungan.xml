<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_new"
    tools:context=".menu.materi.hubungansahaenergi.HubunganFragment">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:paddingVertical="24dp"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materihubunganjudul"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materihubungan1"
            android:textSize="14sp"
            android:justificationMode="inter_word"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materihubungan2"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/img1hubungannew"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:id="@+id/gambar5energi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hubungangambar1"
            android:textAlignment="center"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materihubungan3"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:justificationMode="inter_word"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/img2hubungannew"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:id="@+id/gambar2energi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materihubungan4"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:justificationMode="inter_word"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_width="200dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:src="@drawable/img3hubungannew"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:id="@+id/gambar3energi"/>

        <ImageView
            android:layout_width="325dp"
            android:layout_height="225dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/revisi2"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materihubungan5"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:justificationMode="inter_word"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Hubungan Usaha dengan Energi Kinetik"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materihubungan7"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:justificationMode="inter_word"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_width="225dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/img4hubungannew"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:id="@+id/gambar4energi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hubungangambar2"
            android:textAlignment="center"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materihubungan8"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:justificationMode="inter_word"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_width="225dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/img5hubungannew"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:id="@+id/gambar5hubungan"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(1)"
            android:textAlignment="center"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materihubungan9"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:justificationMode="inter_word"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/img6hubungannew"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:id="@+id/gambar6hubungan"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(2)"
            android:textAlignment="center"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materihubungan10"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:justificationMode="inter_word"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_width="225dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/img7hubungannew"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:id="@+id/gambar7hubungan"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/revisi3"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/img8hubungannew"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="100dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/merah"
                android:layout_toLeftOf="@id/batas"
                android:layout_marginRight="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="12dp"
                        android:src="@drawable/ic_video"
                        android:id="@+id/ic_video"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Video"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@id/ic_video"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_video"/>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:id="@+id/batas"/>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="100dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/biru"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/batas">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="12dp"
                        android:src="@drawable/ic_baseline_library_books_24"
                        android:id="@+id/ic_latihan"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latihan Soal"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_toRightOf="@id/ic_latihan"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_latihan"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>


</RelativeLayout>