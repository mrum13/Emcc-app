<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.ApersActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar_apersepsi"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_apersepsi"
        android:scrollbars="none"
        android:layout_marginVertical="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/apersepsi1"/>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/apersepsi2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:layout_below="@id/linear1">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/apersepsi3"/>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/apersepsi4"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_below="@id/linear2"
                android:textColor="@color/black"
                android:justificationMode="inter_word"
                android:layout_marginHorizontal="24dp"
                android:text="@string/apersepsi_detail"/>

        </RelativeLayout>



    </ScrollView>

</RelativeLayout>