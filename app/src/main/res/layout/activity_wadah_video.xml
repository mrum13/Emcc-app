<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.materi.WadahVideoActivity"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/activity_main_youtubePlayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_putar"
        android:drawableLeft="@drawable/ic_baseline_screen_rotation_24"
        android:layout_centerHorizontal="true"
        android:text="Putar Layar"
        android:textColor="@color/white"
        android:drawablePadding="8dp"
        android:layout_below="@id/activity_main_youtubePlayerView"
        android:layout_marginTop="24dp"
        android:clickable="true"/>

</LinearLayout>