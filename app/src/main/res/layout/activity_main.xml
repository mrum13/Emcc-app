<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingVertical="50dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_apersepsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apersepsi_main"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btn_ki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/KI_main"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_apersepsi"/>

        <Button
            android:id="@+id/btn_peta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/peta_main"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_ki"/>

        <Button
            android:id="@+id/btn_tokoh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tokoh_main"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_peta"/>

        <Button
            android:id="@+id/btn_materi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/materi_main"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_tokoh"/>

        <Button
            android:id="@+id/btn_soal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/soal_main"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_materi"/>

        <Button
            android:id="@+id/btn_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profil_main"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_soal"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>